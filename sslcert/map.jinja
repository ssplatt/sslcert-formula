# vim: ft=jinja
# This file handles the merging of pillar data with the data from defaults

{# Start with  defaults from defaults.yml #}
{% import_yaml 'sslcert/defaults.yml' as default_settings %}

{#
Setup variable using grains['os_family'] based logic, only add key:values here
that differ from whats in defaults.yml
#}
{% set os_family_map = salt['grains.filter_by']({
        'Debian': {},
        'Suse': {},
        'Arch': {},
        'RedHat': {},
  }
  , grain="os_family"
  , merge=salt['pillar.get']('sslcert:lookup'))
%}

{# Merge the flavor_map to the default settings #}
{% do default_settings.sslcert.update(os_family_map) %}

{# Merge in template:lookup pillar #}
{% set sslcert = salt['pillar.get'](
        'sslcert',
        default=default_settings.sslcert,
        merge=True
    )
%}
